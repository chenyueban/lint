{
  "name": "@chenyueban/lint",
  "version": "0.1.0",
  "description": "Lint Sharable Configurations and Rules",
  "main": "src/index.js",
  "scripts": {
    "dist": "echo dist",
    "postinstall": "node bin/install.js",
    "lint": "eslint src/**/*.js",
    "update:deps": "yarn upgrade-interactive --latest",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chenyueban/lint.git"
  },
  "keywords": ["eslint", "prettier", "eslintConfig"],
  "author": {
    "name": "chenyueban",
    "email": "jasonchan0527@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chenyueban/lint/issues"
  },
  "homepage": "https://github.com/chenyueban/lint#readme",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "pkg-up": "^3.1.0",
    "prettier": "^2.2.1"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "standard-version": "^9.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["cross-env NODE_ENV=development eslint --cache"],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
